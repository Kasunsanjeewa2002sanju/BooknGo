<!-- Main Hero Section -->
<div class="bg-dark text-white text-center py-5" style="background-image: url('https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=1470&q=80'); background-size: cover; background-position: center;">
