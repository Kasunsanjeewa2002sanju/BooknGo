@{
    ViewData["Title"] = "BooknGo - DJ Events";
}
@model List<BooknGo.Models.Booking>

<a asp-action="CreateEditBookingForm" asp-controller="Home" class="btn btn-primary fw-semibold rounded-pill shadow-sm" style="background-color: #1E90FF; border-color: #1E90FF;">
    Book DJ Event
</a>


<!-- Explore & Discover Section -->
<section id="explore" class="py-5" style="background-color: #f8f9fa;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <p class="text-danger fw-bold mb-2">PARTY & ENTERTAINMENT</p>
                <h2 class="display-5 fw-bold mb-4">Experience the Ultimate DJ Night</h2>
                <p class="lead mb-3">Feel the energy of live music and world-class DJs who bring electrifying performances to your events.</p>
                <p class="mb-4">From private parties to grand festivals, we connect you with top DJs and unforgettable experiences.</p>
                <a class="btn btn-danger btn-lg px-4" href="#activities">Explore Now</a>
            </div>
            <div class="col-lg-6">
                <div class="position-relative" style="background-color: #111; padding: 20px; border-radius: 15px;">
                    <div class="row g-3">
                        <div class="col-6">
                            <img src="https://images.unsplash.com/photo-1518972559570-7cc1309f3229?auto=format&fit=crop&w=400&q=80" alt="DJ Performance" class="img-fluid rounded" />
                        </div>
                        <div class="col-6">
                            <img src="https://images.unsplash.com/photo-1519671482749-fd09be7ccebf?auto=format&fit=crop&w=400&q=80" alt="Crowd Party" class="img-fluid rounded mb-3" />
                            <img src="https://images.unsplash.com/photo-1507874457470-272b3c8d8ee2?auto=format&fit=crop&w=400&q=80" alt="DJ Setup" class="img-fluid rounded" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Find Your Special Section -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="position-relative" style="background-color: #111; padding: 20px; border-radius: 15px;">
                    <img src="https://images.unsplash.com/photo-1506157786151-b8491531f063?auto=format&fit=crop&w=600&q=80" alt="DJ Crowd" class="img-fluid rounded mb-3" />
                    <div class="row g-3">
                        <div class="col-6">
                            <img src="https://images.unsplash.com/photo-1518972559570-7cc1309f3229?auto=format&fit=crop&w=300&q=80" alt="Music Festival" class="img-fluid rounded" />
                        </div>
                        <div class="col-6">
                            <img src="https://images.unsplash.com/photo-1497032205916-ac775f0649ae?auto=format&fit=crop&w=300&q=80" alt="DJ Console" class="img-fluid rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <p class="text-danger fw-bold mb-2">LIVE EVENTS</p>
                <h2 class="display-5 fw-bold mb-4">Book Your Favorite DJ for Any Occasion</h2>
                <p class="lead mb-3">From club nights to weddings, our DJs bring the beats that make your night unforgettable.</p>
                <p class="mb-4">Choose from professional DJs across genres: EDM, Hip-hop, Techno, House, and more.</p>
                <div class="row">
                    <div class="col-6">
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-check text-danger me-2"></i>Top DJs</li>
                            <li class="mb-2"><i class="fas fa-check text-danger me-2"></i>Custom Playlists</li>
                            <li class="mb-2"><i class="fas fa-check text-danger me-2"></i>Event Hosting</li>
                        </ul>
                    </div>
                    <div class="col-6">
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-check text-danger me-2"></i>Affordable Packages</li>
                            <li class="mb-2"><i class="fas fa-check text-danger me-2"></i>Lighting Setup</li>
                            <li class="mb-2"><i class="fas fa-check text-danger me-2"></i>Sound System</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- DJ Activities (instead of camping activities) -->
<section id="activities" class="py-5" style="background-color: #f8f9fa;">
    <div class="container text-center">
        <p class="text-danger fw-bold mb-2">EVENT SERVICES</p>
        <h2 class="display-5 fw-bold mb-5">Our DJ Event Services</h2>
        <div class="row g-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-music fa-2x"></i>
                        </div>
                        <h5 class="fw-bold">Club Nights</h5>
                        <p class="text-muted">Book DJs for electrifying nightclub events.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-glass-cheers fa-2x"></i>
                        </div>
                        <h5 class="fw-bold">Private Parties</h5>
                        <p class="text-muted">Make birthdays, reunions, and events memorable.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-heart fa-2x"></i>
                        </div>
                        <h5 class="fw-bold">Weddings</h5>
                        <p class="text-muted">Perfect soundtracks for your big day.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-headphones fa-2x"></i>
                        </div>
                        <h5 class="fw-bold">Corporate Events</h5>
                        <p class="text-muted">Professional DJs for conferences & launches.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-5">
            <a class="btn btn-danger btn-lg px-4" href="#activities">View All Services</a>
        </div>
    </div>
</section>
