@model List<BooknGo.Models.Booking>

<div class="container py-5">
    <h1 style="color: #1E90FF;">Bookings</h1>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        @foreach (var booking in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-lg border-3 border border-black border-2 p-3 rounded-6" style="border-color: #1E90FF;">
                    <div class="card-header text-center bg-white border-0">
                        <h5 class="fw-bolder" style="color: #1E90FF;">@booking.Name</h5>
                    </div>

                    <div class="card-body text-center">
                        <p class="text-muted mb-2">@booking.Description</p>
                        <p class="mb-1"><strong style="color: #1E90FF;">Start:</strong> @booking.StartDate.ToString("yyyy-MM-dd HH:mm")</p>
                        <p class="mb-1"><strong style="color: #1E90FF;">End:</strong> @booking.EndDate.ToString("yyyy-MM-dd HH:mm")</p>
                        <p class="mb-1"><strong style="color: #1E90FF;">Location:</strong> @booking.Location</p>
                        <p class="mb-1"><strong style="color: #1E90FF;">Category:</strong> @booking.Category</p>
                        <p class="mb-3"><strong style="color: #1E90FF;">Capacity:</strong> @booking.Capacity</p>
                    </div>

                    <div class="card-footer bg-white border-0">
                        <div class="d-grid gap-2">
                            <a asp-action="CreateEditBooking" asp-controller="Home" asp-route-id="@booking.EventId" class="btn btn-primary fw-semibold rounded-pill shadow-sm" style="background-color: #1E90FF; border-color: #1E90FF;">
                                Edit Booking
                            </a>
                            <a asp-action="DeleteBooking" asp-controller="Home" asp-route-id="@booking.EventId" class="btn btn-danger fw-semibold rounded-pill shadow-sm">
                                Delete Booking
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        background-color: #F5F5F5;
    }

    .btn-primary {
        color: white;
    }

        .btn-primary:hover {
            background-color: #104E8B;
            border-color: #104E8B;
        }
</style>