@{
    ViewData["Title"] = "Create/EditBookings";
}
@model BooknGo.Models.Booking

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4">Add Booking</h1>

            <form asp-action="CreateEditBookingForm"  asp-controller="Home" method="post" class="p-4 shadow rounded bg-light">
                <h3 class="mb-4">Create New Event</h3>

                <div class="mb-3 text-start">
                    <input asp-for="EventId" class="form-control" placeholder="Enter event ID" />
                    <span asp-validation-for="EventId" class="text-danger"></span>
                </div>

                <div class="mb-3 text-start">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter event name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3 text-start">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Brief description of the event"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3 text-start">
                    <label asp-for="StartDate" class="form-label"></label>
                    <input asp-for="StartDate" class="form-control" type="datetime-local" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="mb-3 text-start">
                    <label asp-for="EndDate" class="form-label"></label>
                    <input asp-for="EndDate" class="form-control" type="datetime-local" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="mb-3 text-start">
                    <label asp-for="Location" class="form-label"></label>
                    <input asp-for="Location" class="form-control" placeholder="Event location" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="mb-3 text-start">
                    <label asp-for="Capacity" class="form-label"></label>
                    <input asp-for="Capacity" class="form-control" type="number" min="1" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Submit Booking</button>
            </form>
        </div>
    </div>
</div>
